---
import Layout from '../layouts/Layout.astro';

const randomTextToBackHome = [
  "Something went wrong on our end. Our team is already working on fixing it. In the meantime, why not head back to the homepage?",
  "Uh-oh! The server seems to be having a bad day. Try refreshing the page or go back to the home page.",
  "Looks like our system took a short nap. Don't worry, we're waking it up! Click below to return to safety.",
  "Oops! It’s not you, it’s us. Something on our side isn’t working right now. You might want to go back home and try again later.",
  "An unexpected error has occurred. We’re on it! Until then, click below to head back to the main page."
];

// Pick a random message
const randomMessage =
  randomTextToBackHome[Math.floor(Math.random() * randomTextToBackHome.length)];
---

<Layout title="Ngrhadi" displayHeaderAndFooter={false}>
  <div
    class="flex flex-col w-screen h-screen justify-center items-center text-center px-2"
  >
    <div class="text-8xl font-bold text-primary">404</div>
    <div class="mt-4 text-lg text-gray-600 max-w-lg">
      {randomMessage}
    </div>
    <a
      href="/"
      class="mt-6 btn btn-primary text-secondary-content hover:underline text-lg"
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="size-6"
      >
        <path
          d="M11.47 3.841a.75.75 0 0 1 1.06 0l8.69 8.69a.75.75 0 1 0 1.06-1.061l-8.689-8.69a2.25 2.25 0 0 0-3.182 0l-8.69 8.69a.75.75 0 1 0 1.061 1.06l8.69-8.689Z"
        ></path>
        <path
          d="m12 5.432 8.159 8.159c.03.03.06.058.091.086v6.198c0 1.035-.84 1.875-1.875 1.875H15a.75.75 0 0 1-.75-.75v-4.5a.75.75 0 0 0-.75-.75h-3a.75.75 0 0 0-.75.75V21a.75.75 0 0 1-.75.75H5.625a1.875 1.875 0 0 1-1.875-1.875v-6.198a2.29 2.29 0 0 0 .091-.086L12 5.432Z"
        ></path>
      </svg>
      Back to Home</a
    >
  </div>
</Layout>
